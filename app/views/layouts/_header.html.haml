%header
  .header-wrapper
    .container
      .fa.fa-twitter
      -if current_user
        %ul.nav-left
          = link_to global_tweets_path do
            %li.head-btn.btn-default.glyphicon.glyphicon-globe
              グローバル
          = link_to tweets_path do
            %li.head-btn.btn-default.glyphicon.glyphicon-home
              ホーム
          / %li.head-btn.btn-default.glyphicon.glyphicon-stats
          /   モーメント
          / %li.head-btn.btn-default.glyphicon.glyphicon-bell
          /   通知
        .nav-right
          = form_tag("/users/search", method: :get) do
            %input.right-btn-input{ name: "search", placeholder: "キーワード検索"}
            %input.input-submit-btn{ id: "submit-search",type: "submit"}
              %label.glyphicon.glyphicon-search{ for: "submit-search"}
          %ul.right-btn
            = link_to user_path(current_user) do
              %li.glyphicon.glyphicon-user.btn
            %li.btn.btn-default.glyphicon.glyphicon-edit

-if @new_tweet
  = render 'tweets/tweet_modal', tweet: @new_tweet
