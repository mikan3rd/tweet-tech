#apply-modal.apply-modal-wrapper
  .modal
    .close-modal
      .glyphicon.glyphicon-remove
    #apply-form
      %h3 ツイートする
      = form_for(tweet) do |f|
        - if tweet.errors.any?
          #error_explanation
            %h2
              = pluralize(tweet.errors.count, "error")
              prohibited this tweet from being saved:
            %ul
              - tweet.errors.full_messages.each do |message|
                %li= message
        .actions-tweet
          = f.text_area :content, placeholder: "いまどうしてる？", class: "field tweet-field"
          = f.file_field :image, class: "tweet-image"
          %br
          = f.submit "Tweet", class: "btn btn-default tweet-btn"
