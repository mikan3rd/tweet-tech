.tweet-wrapper

  = render 'tweets/tweet_profile', tweet: tweet

  %p.tweets-content
    = tweet.content

  .tweets-image
    - if tweet.image.present?
      = image_tag(tweet.image.url, class: "tweet-image-border")
  %h5.tweets-time
    = tweet.created_at.strftime("%Y/%m/%d %H時%M分")

  = render 'likes/like_links', tweet: tweet

  = link_to :back do
    .btn.btn-default.glyphicon.glyphicon-retweet

  .btn-group
    = link_to '詳細', tweet, class: "btn btn-default"
    - if tweet.user.id == current_user.id
      = link_to '削除', tweet, method: :delete, class: "btn btn-default", data: { confirm: 'このツイートを本当に削除しますか?' }
