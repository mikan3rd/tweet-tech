%h2.login-title ログイン
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .field
    = f.label :email, class: "login-label"
    %br/
    = f.email_field :email, autofocus: true, class: "login-field"
  .field
    = f.label :password, class: "login-label"
    = f.password_field :password, autocomplete: "off", class: "login-field"
  - if devise_mapping.rememberable?
    .field.login-check
      = f.check_box :remember_me
      = f.label :remember_me
  %br
  .actions
    = f.submit "ログイン", class: "btn btn-default login-btn"
    %br
    %br
= render "devise/shared/links"
