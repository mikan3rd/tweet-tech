%h2
  ユーザー情報
/ %h2
/   #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  .field
    = f.label :nickname, value: "ニックネーム"
    = f.text_field :nickname, autofocus: true

  .field
    = f.label :username, value: "ユーザーネーム"
    = f.text_field :username, placeholder: "英数字のみ", autofocus: true
  .field
    = f.label :email
    = f.email_field :email, autofocus: true
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}

  .field
    = f.label :current_password, value: "現在のパスワード"
    = f.password_field :current_password, autocomplete: "off"

  .field
    = f.label :password, value: "新しいパスワード"
    %i (leave blank if you don't want to change it)
    %br/
    = f.password_field :password, autocomplete: "off"
    - if @minimum_password_length
      %br/
      %em
        = @minimum_password_length
        characters minimum
  .field
    = f.label :password_confirmation, value: "新しいパスワードの確認"
    = f.password_field :password_confirmation, autocomplete: "off"

  .actions
    = f.submit "変更を保存"
%br/

%h3 アカウントの削除
#{button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか?" }, method: :delete}
%br/

= link_to "Back", :back
