%h2 Twitterを使ってみよう
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :nickname, value: "ニックネーム"
    = f.text_field :nickname, autofocus: true

  .field
    = f.label :username, value: "ユーザーネーム"
    = f.text_field :username, placeholder: "英数字のみ", autofocus: true

  .field
    = f.label :email
    = f.email_field :email, autofocus: true

  .field
    = f.label :password
    - if @minimum_password_length
      = f.password_field :password, autocomplete: "off", placeholder: "パスワードは#{@minimum_password_length}文字以上にしてください"

  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: "off"

  .actions
    = f.submit "アカウント作成"

%p アカウントをお持ちの場合
= render "devise/shared/links"

